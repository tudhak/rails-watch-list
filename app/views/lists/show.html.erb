<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image %>);">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
  <a href=# class="number text-decoration-none text-black">Number of movies: <%= @list.bookmarks.count %></a>
</div>

<div class="row justify-content-center mb-3">
    <div class="col-6 p-3 rounded border shadow-sm">
      <div class="d-flex justify-content-between align-items-center">
        <%= link_to lists_path, class:"p-2 bg-light border rounded shadow-sm text-decoration-none" do %>
          <span><i class="fa-solid fa-share"></i> Back to lists</span>
        <% end %>
        <h3 class="m-0">List of bookmarks</h3>
        <%= link_to new_list_bookmark_path(@list), class:"p-2 bg-light border rounded shadow-sm text-decoration-none" do %>
          <span><i class="fa-solid fa-plus"></i> Add a bookmark</span>
        <% end %>
      </div>
    </div>
  </div>

<%# <div class="container"> %>
<div class="row">
  <div class="col-12">
    <div class="grid">
        <% @list.bookmarks.each do |bookmark| %>
          <div class="card mb-4 border rounded shadow">
            <img class="card-img-top" src="<%= bookmark.movie.poster_url %>" alt="Poster url">
            <div class="card-body border-bottom">
              <ul class="list-group">
                <li class="list-group-item"><strong><%= bookmark.movie.title %></strong></li>
                <li class="list-group-item text-secondary"><%= bookmark.movie.overview %></li>
                <li class="list-group-item"><i class="fa-solid fa-star text-warning"></i> <%= bookmark.movie.rating %></li>
                <li class="list-group-item"><i class="fa-solid fa-quote-left"></i> "<%= bookmark.comment %>"</li>
              </ul>
            </div>
            <%= link_to 'Delete', bookmark_path(bookmark), class:"btn btn-danger text-white",
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
          </div>
        <% end %>
    </div>
  </div>
</div>
<%# </div> %>
